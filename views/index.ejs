<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %> 
<body>
   <h1>Mongoose Product List</h1> 
   <button class="topnav" type="button" onclick="location.href='/products/new'">Add a New Product</button>
   <ul>
        <% products.forEach(product => { %>
        <li> 
            <a class="name" href='/products/<%=product._id%>'><h2><%=product.name%></h2></a>
            <a class="name" href='/products/<%=product._id%>'><img src='<%=product.img%>' alt="picture of <%=product.name%>"/></a>
        <div class="debuttons">
            <form action="/products/<%=product._id%>?_method=delete" method="post">
            <input type="submit" value="Delete"/>
            </form>
            <button type="button" onclick="location.href='/products/<%=product._id%>/edit'">Edit</button>
        </div>
        </li>
        <% }) %>
   </ul>
</body>
</html>