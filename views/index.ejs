<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %> 
<body>
   <h1>Mongoose Product List</h1> 
   <button type="button" onclick="location.href='/products/new'">Add a New Product</button>
   <ul>
        <% products.forEach(product => { %>
        <li> <a class="name" href='/products/<%=product._id%>'><%=product.name%></a>
        <form action="/products/<%=product._id%>?_method=delete" method="post">
            <input type="submit" value="Delete"/>
        </form>
        </li>
        <% }) %>
   </ul>
</body>
</html>